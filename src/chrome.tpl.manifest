content guiconfig content/

skin guiconfig classic/1.0 skin/

style chrome://global/content/customizeToolbar.xul chrome://guiconfig/skin/style/gcbutton.css
style chrome://guiconfig/content/ui/button.xul chrome://guiconfig/skin/style/gcbutton.css

# adds the menu items to the normal menu as well as to the app menu
overlay chrome://browser/content/browser.xul chrome://guiconfig/content/ui/browser_menu_default.xul

# override the former overlay if on OS with the option menu item in the "Edit" popup
override chrome://guiconfig/content/ui/browser_menu_default.xul chrome://guiconfig/content/ui/browser_menu_edit.xul os=Linux
override chrome://guiconfig/content/ui/browser_menu_default.xul chrome://guiconfig/content/ui/browser_menu_edit.xul os=SunOS
override chrome://guiconfig/content/ui/browser_menu_default.xul chrome://guiconfig/content/ui/browser_menu_edit.xul os=FreeBSD
override chrome://guiconfig/content/ui/browser_menu_default.xul chrome://guiconfig/content/ui/browser_menu_edit.xul os=OpenBSD

# adds a toolbar button
overlay chrome://browser/content/browser.xul chrome://guiconfig/content/ui/button.xul

# if this is not Firefox 7 or higher use the usual preference dialog
override chrome://guiconfig/content/ui/inlinepref.xul chrome://guiconfig/content/ui/pref.xul application={ec8030f7-c20a-464f-9b0e-13a3a9e97384} appversion<=6.*

